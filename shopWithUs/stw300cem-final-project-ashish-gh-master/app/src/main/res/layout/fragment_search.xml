<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <android.support.v7.widget.CardView
            android:layout_marginTop="10dp"
            android:id="@+id/cardListUsers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="30dp"
            android:background="#eee"
            app:cardCornerRadius="5dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            >
            />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgQr"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/qr"
                    />

                <EditText
                    android:id="@+id/etSearchShoes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/imgQr"
                    android:hint="Shoes Name" />

                <Button
                    android:id="@+id/btnSearchShoes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/drawable_button"
                    android:text="Search . . . "
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_below="@id/imgQr"
                    android:layout_margin="10dp"/>



            </RelativeLayout>



        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewListShoes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="3dp"
            android:background="#ddd"
            android:layout_marginLeft="3dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewListShoesById"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="3dp"
            android:background="#ddd"
            android:layout_marginLeft="3dp"/>

    </LinearLayout>

</LinearLayout>
