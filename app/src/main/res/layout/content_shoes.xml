<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardViewShoes"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        card_view:cardCornerRadius="5dp"
        android:layout_marginTop="5dp"
        android:background="?android:attr/selectableItemBackground"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgShoes"
            android:layout_width="85dp"
            android:layout_height="match_parent"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="85dp"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="168dp"
                android:layout_toEndOf="@id/tvShoesName"
                android:src="@drawable/ic_favorite" />

            <TextView
                android:id="@+id/tvShoesBrand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:hint="Item Name"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/tvShoesName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_below="@id/tvShoesBrand"
                android:hint="Item Name"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/tvShoesPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvShoesName"
                android:layout_marginStart="20dp"
                android:hint="Price"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvShoesPrice"
                android:layout_marginStart="20dp"
                android:hint="Description"
                android:textSize="15sp"
                />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>